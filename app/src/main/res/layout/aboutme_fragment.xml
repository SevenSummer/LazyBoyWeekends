<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ImageView
            android:id="@+id/aboutme_fragment_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/person_bg_unlogin"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/aboutme_fragment_cat_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/big_black_cat"
            />
        <LinearLayout
            android:layout_below="@id/aboutme_fragment_cat_iv"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/aboutme_fragment_order_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我预定的"
                android:textSize="20sp"
                android:drawableTop="@drawable/ic_person_order"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E5E5E5"/>
            <TextView
                android:id="@+id/aboutme_fragment_interset_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="兴趣标签"
                android:textSize="20sp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_person_interest"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E5E5E5"/>
            <TextView
                android:id="@+id/aboutme_fragment_setting_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="设置"
                android:textSize="20sp"
                android:gravity="center"
                android:drawableTop="@drawable/ic_person_setting"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#484C4E"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我收藏的活动"
                android:textSize="25sp"/>
        </LinearLayout>

    </RelativeLayout>
    <ListView
        android:background="#F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>