<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:text="懒喵助理"
        android:textSize="25sp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBEBEA"/>
    <RelativeLayout
        android:background="#FFFCF9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/assistant_fragment_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/big_black_cat"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:id="@+id/assistant_fragment_tv"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:text="是不是很难找到适合自己或团队的活动呢？在下方发布一条你想要的周末需求，懒喵助理为你制定只属于你或团队的美好周末~"
            android:textSize="18sp"
            android:layout_alignTop="@id/assistant_fragment_iv"
            android:layout_toRightOf="@id/assistant_fragment_iv"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/assistant_fragment_et"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="告诉我你的周末需求吧。。。"
            android:layout_alignParentBottom="true"
            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEBEA"
            android:layout_above="@id/assistant_fragment_et"/>

    </RelativeLayout>

</LinearLayout>